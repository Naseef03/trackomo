<h1>Manage Expense</h1>

<%# Add Expenses %>
<%= render "expense_form" %>

<br>

<div>
    <%= @sum["Income"] - @sum["Expense"] %>
</div>

<%# List Expenses %>
<table>
    <thead>
        <td>Space</td>
        <td>Date</td>
        <td>Account</td>
        <td>Category</td>
        <td>Description</td>
        <td>Amount</td>
    </thead>

    <% @expenses.each do |expense| %>
        <tr>
            <td><%= expense.space %></td>
            <td><%= expense.date.strftime("%d-%m-%Y") %></td>
            <td><%= expense.account %></td>
            <td><%= expense.category %></td>
            <td><%= expense.description %></td>
            <td><%= expense.amount %></td>
            <td><%= button_to "Delete", expense, method: :delete, data: { turbo_confirm: "Are you sure?" } %></td>
        </tr>
    <% end %>
</table>