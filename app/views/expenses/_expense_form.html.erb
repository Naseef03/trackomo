<%= form_with model: @expense, url: expenses_path, method: :post, local:true do |f|  %>
    <%= f.select :exp_inc, ["Expense", "Income"] %><br>

    <%= f.label :space, "Space" %>
    <%= f.text_field :space %>
    
    <%= f.label :category, "Category" %>
    <%= f.text_field :category %>

    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>

    <%= f.label :date, "Date" %>
    <%= f.date_field :date, value: Date.today %>

    <%= f.label :account, "Account" %> 
    <%= f.text_field :account %>

    <%= f.label :amount, "Amount" %>
    <%= f.number_field :amount, step: 0.01 %>

    <%= f.submit "Add Expense" %>
<% end %>